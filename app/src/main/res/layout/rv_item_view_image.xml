<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.github.captain_miao.uniqueadapter.model.ImageModel"/>

        <import type="com.github.captain_miao.uniqueadapter.library.OnClickViewPresenter"/>

        <variable
            name="viewModel"
            type="ImageModel"/>

        <variable
            name="presenter"
            type="OnClickViewPresenter"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(v) -> presenter.onClick(v, viewModel)}"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:imageUrl="@{viewModel.url}"/>


    </RelativeLayout>


</layout>